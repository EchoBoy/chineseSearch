<!-- pages/strokeOrder/strokeOrder.wxml -->
<!-- 笔顺动画展示区 -->
<view class="main">
    <image src='{{isSimple?simpleSvg:traditionalSvg}}' class="block-fill"/>
</view>
<!-- 繁、简体切换区 -->
<view class="middle">
    <button size="mini" class="{{isSimple?'sel-btn':'unsel-btn' }} left-btn" bindtap="switchToSimple">
        简
    </button>
    <button size="mini" class="{{isSimple?'unsel-btn':'sel-btn' }} {{hasTraditional?'':'unavailable-btn'}} right-btn" bindtap="switchToTraditional">
        繁
    </button>
</view>
<!-- 搜索按钮 & 设置按钮 -->
<view class="bottom">
    <!-- 搜索 -->
    <view class="bottom-item" bindtap='search' hover-class="bottom-item-hover">
        <image class="big-icon" src='data:image/svg+xml;base64,' />
    </view>
    <!-- 设置 -->
    <view class="bottom-item" hover-class="bottom-item-hover" bindtap='setting'>
        <image class="big-icon" src="data:image/svg+xml;base64,"/>
        </view>
</view>