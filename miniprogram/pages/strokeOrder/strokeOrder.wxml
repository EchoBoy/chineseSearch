<!-- pages/strokeOrder/strokeOrder.wxml -->
<view class="main">
    <swiper class="storke-order" current-item-id="{{isSimple? 'simple':'traditional'}}" bindchange='swiperChange'>
        <swiper-item item-id='simple'>
            <image src='{{simpleSvg}}' style="height:100%; width:100%;" />
        </swiper-item>
        <swiper-item item-id='traditional'>
            <image src='{{traditionalSvg}}' style="height: 100%;width:100%;" />
        </swiper-item>
    </swiper>
</view>
<!-- 繁、简体切换区。练习 button -->
<view class="middle">
    <button size="mini" class="{{isSimple?'sel-btn':'unsel-btn' }} left-btn"  bindtap="switchToSimple">
        简
    </button>
    <button size="mini" class="{{isSimple?'unsel-btn':'sel-btn' }} right-btn"  bindtap="switchToTraditional">
        繁
    </button>
</view>
<!-- 当前输入的字 & 搜索按钮 -->
<view class="bottom">
    <!-- 当前字 -->
    <view class="bottom-item" hover-class="bottom-item-hover">
        <image hidden="{{!isLoading}}" class="big-icon" src="data:image/svg+xml;base64,"/>
        <text hidden="{{isLoading}}" class="current-character">{{character}}</text>
    </view>
    <!-- 搜索 -->
    <view class="bottom-item" bindtap='search' hover-class="bottom-item-hover">
        <image class="big-icon" src='data:image/svg+xml;base64,'/>
    </view>
    <!-- 写 -->
    <view class="bottom-item" hover-class="bottom-item-hover">
        <image class="big-icon" src='data:image/svg+xml;base64,'/>
    </view>
</view>